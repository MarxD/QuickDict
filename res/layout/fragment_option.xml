<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#E8E5F0" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@drawable/content_translatio" 
        >
      <TextView 
          android:id="@+id/tv_option"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="开启剪贴板查词"
          android:layout_centerVertical="true"
          android:textSize="20dp"
          />
        
      <Switch 
          android:id="@+id/sw_clip"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:paddingRight="5dp"
          />
 
      <RadioGroup 
          android:visibility="gone"
          android:id="@+id/rg_source"
          android:layout_width="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_height="50dp"
          android:paddingTop="5dp"
          android:layout_below="@+id/tv_option"
          android:orientation="horizontal"
          android:gravity="fill_horizontal"
     
          >
          <RadioButton 
              android:id="@+id/rb_youdao"
              android:text="@string/option_youdoa"
              />
          <RadioButton 
              android:id="@+id/rb_baidu"
              android:text="@string/option_baidu"
              />
          <RadioButton 
              android:id="@+id/rb_local"
              android:text="@string/option_local"
              />
          
      </RadioGroup>
        
	</RelativeLayout>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>